@page
@model GestionLivre.Pages.Editeurs.UpdateModel
@{
    ViewData["Title"] = "Edit Editeur";
}

<div id="main_container">
    <!-- heading start -->
    <div class="heading-container">
        <div class="heading">
            <div class="heading_title">
                <div class="heading_links">
                    <a href="index">Dashboard</a>
                    <i class='bx bx-chevron-right'></i>
                    <a href="/Auteurs" class="current_link">@ViewData["Title"]</a>
                </div>
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <!-- heading end -->
    @* zwa9 start *@
    <div class="form_all_container">
        <div class="rectangle">

        </div>
        <div class="form_container">
            <div class="form">
                <h2>@ViewData["Title_2"] Info</h2>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Nom"></label>
                        <input asp-for="Nom" class="form-control" placeholder="eg. Jk amber" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="eg. Jk amber" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="eg. jkamber@mail.com" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Telephone"></label>
                        <input asp-for="Telephone" class="form-control" placeholder="eg. 075464684" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Adresse"></label>
                        <input asp-for="Adresse" class="form-control" placeholder="eg. London street a1" />
                    </div>
                    <div class="button_container">
                        <a asp-page="index"><i class='bx bx-chevron-left'></i> go back</a>
                        <button type="submit" class="a_primary">Save</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
    @* zwa9 end *@

</div>