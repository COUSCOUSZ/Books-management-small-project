@page
@model GestionLivre.Pages.Livres.CreateModel
@{
    ViewData["Title"] = "Create Livre";
}

<div id="main_container">
    <!-- heading start -->
    <div class="heading-container">
        <div class="heading">
            <div class="heading_title">
                <div class="heading_links">
                    <a href="index">Dashboard</a>
                    <i class='bx bx-chevron-right'></i>
                    <a href="/Livre" class="current_link">@ViewData["Title"]</a>
                </div>
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <!-- heading end -->
    @* zwa9 start *@
    <div class="form_all_container">
        <div class="rectangle">

        </div>
        <div class="form_container">
            <div class="form">
                <h2>@ViewData["Title_2"] Info</h2>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Titre"></label>
                        <input asp-for="Titre" class="form-control" placeholder="eg. Jk amber" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ISBN"></label>
                        <input asp-for="ISBN" class="form-control" placeholder="eg. Jk amber" />
                    </div>
                    <div class="form-group">
                        <label asp-for="IDEditeur"></label>
                        <select asp-for="IDEditeur" asp-items="Model.Editeurs" class="form-control">
                            <option value="">Select Editeurs</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="IDAuteur"></label>
                        <select asp-for="IDAuteur" asp-items="Model.Auteurs" class="form-control">
                            <option value="">Select Auteurs</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="IDCat"></label>
                        <select asp-for="IDCat" asp-items="Model.Categories" class="form-control">
                            <option value="">Select Categories</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DescripLivre"></label>
                        <input asp-for="DescripLivre" class="form-control" placeholder="eg. jkamber@mail.com" />
                    </div>
                    <div class="form-group">
                        <label asp-for="AnneeEdition"></label>
                        <input asp-for="AnneeEdition" class="form-control" placeholder="eg. 075464684" />
                    </div>
                    <div class="button_container">
                        <a asp-page="index"><i class='bx bx-chevron-left'></i> go back</a>
                        <button type="submit" class="a_primary">Save</button>
                    </div>

                </form>
            </div>
        </div>

    </div>
    @* zwa9 end *@

</div>