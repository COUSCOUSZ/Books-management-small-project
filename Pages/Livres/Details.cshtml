@page
@model GestionLivre.Pages.Livres.DetailsModel
@{
    ViewData["Title"] = "Livre Details";
}


<div id="main_container">
    <!-- heading start -->
    <div class="heading-container">
        <div class="heading">
            <div class="heading_title">
                <div class="heading_links">
                    <a href="index">Dashboard</a>
                    <i class='bx bx-chevron-right'></i>
                    <a href="/editeurs" class="current_link">@ViewData["Title"]</a>
                </div>
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <!-- heading end -->
    @* zwa9 start *@
    <div class="form_all_container">
        <div class="rectangle">

        </div>
        <div class="form_container">
            <div class="form">
                <h2>@ViewData["Title_2"] Info</h2>

                <div class="flex-container">
                    <div class="flex-row">
                        <div>ID</div>
                        <div>@Model.livre.IDLivre</div>
                    </div>
                    <div class="flex-row">
                        <div>Title</div>
                        <div>@Model.livre.Titre</div>
                    </div>
                    <div class="flex-row">
                        <div>ISBN</div>
                        <div>@Model.livre.ISBN</div>
                    </div>
                    <div class="flex-row">
                        <div>Editeur</div>
                        <a asp-page="/Editeurs/Details" asp-route-id="@Model.livre.IDEditeur"> @Model.livre.NomEditeur</a>
                    </div>
                    <div class="flex-row">
                        <div>Auteur</div>
                        <a asp-page="/Auteurs/Details" asp-route-id="@Model.livre.IDAuteur"> @Model.livre.NomAuteur</a>
                    </div>
                    <div class="flex-row">
                        <div>Categorie</div>
                        <a asp-page="/Categories/Details" asp-route-id="@Model.livre.IDCat"> @Model.livre.NomCat</a>
                    </div>
                    @* <div class="flex-row">
                        <div></div>
                        <div></div>
                    </div> *@
                    <div class="flex-row">
                        <div>Description</div>
                        <div>@Model.livre.DescripLivre</div>
                    </div>
                    <div class="flex-row">
                        <div>Year of Edition</div>
                        <div>@Model.livre.AnneeEdition</div>
                    </div>
                </div>
                <div class="button_container">
                    <a asp-page="index"><i class='bx bx-chevron-left'></i> go back</a>
                    <a  asp-page="Update" asp-route-id="@Model.livre.IDLivre" class="a_primary">Edit</a>
                </div>
            </div>
        </div>

    </div>
    @* zwa9 end *@

</div>